<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F3D7A7">

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/dark"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Otvet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/gray"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/Text1"
        app:layout_constraintEnd_toEndOf="parent" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">


        <TableRow>

            <Button
                android:id="@+id/ButX2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="^2"
                android:textSize="40sp" />

            <Button
                android:id="@+id/ButC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="C"
                android:textSize="40sp" />

            <Button
                android:id="@+id/ButCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="CE"
                android:textSize="40sp" />

            <Button
                android:id="@+id/ButDelenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF9800"
                android:text="/"
                android:textSize="40sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/But7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="7"
                android:textSize="40sp" />

            <Button
                android:id="@+id/But8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="8"
                android:textSize="40sp" />

            <Button
                android:id="@+id/But9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="9"
                android:textSize="40sp" />

            <Button
                android:id="@+id/ButX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF9800"
                android:text="X"
                android:textSize="40sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/But4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="4"
                android:textSize="40sp" />

            <Button
                android:id="@+id/But5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="5"
                android:textSize="40sp" />

            <Button
                android:id="@+id/But6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="6"
                android:textSize="40sp" />

            <Button
                android:id="@+id/ButMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF9800"
                android:text="-"
                android:textSize="40sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/But1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="1"
                android:textSize="40sp" />

            <Button
                android:id="@+id/But2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="2"
                android:textSize="40sp" />

            <Button
                android:id="@+id/But3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="3"
                android:textSize="40sp" />

            <Button
                android:id="@+id/ButPluse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF9800"
                android:text="+"
                android:textSize="40sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/ButConvert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="+/-"
                android:textSize="40sp" />

            <Button
                android:id="@+id/But0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="0"
                android:textSize="40sp" />

            <Button
                android:id="@+id/ButZapyataya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text=","
                android:textSize="40sp" />

            <Button
                android:id="@+id/ButRavno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF9800"
                android:text="="
                android:textSize="40sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>